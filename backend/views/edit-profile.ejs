<html>

<head>
<script src="https://kit.fontawesome.com/11d6728434.js" crossorigin="anonymous"></script>
</head>

<body>

<div class="button-row">
<i class="fa-solid fa-utensils"></i>
<i class="fa-solid fa-user"></i>
<i class="fa-solid fa-right-from-bracket"></i>
</div>

<form action="/edit">
<fieldset>
  <legend>Edit profile:</legend>

  <label for="name-text">Name:</label>
  <input type="text" id="name-text" value="<%= name %>">

  <br>

  <label for="email-text">E-mail:</label>
  <input type="text" id="email-text" value="<%= email %>">

  <br>

  <label for="phone-text">Phone:</label>
  <input type="text" id="phone-text" value="<%= phone %>">

  <br>

  <input type="submit" value="Submit">

</fieldset>
</form>

</body>
</html>
